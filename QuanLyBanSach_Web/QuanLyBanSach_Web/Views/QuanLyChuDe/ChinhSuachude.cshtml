@model QuanLyBanSach_Web.Models.Data.ChuDe

@{
    ViewBag.Title = "ChinhSuachude";
    Layout = "~/Views/LayOut/AdminLayOut.cshtml";
}

<h2>Chỉnh Sửa Chủ Đề</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaChuDe)
        <div class="form-group">
            @Html.LabelFor(model => model.MaChuDe, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span style="font-size:15pt;margin-top:2px;margin-left:5px">@Model.MaChuDe</span>
                @Html.Hidden("MaChuDe", Model.MaChuDe)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenChuDe, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenChuDe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                @Html.ActionLink("Trở Về", "Index",null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}
