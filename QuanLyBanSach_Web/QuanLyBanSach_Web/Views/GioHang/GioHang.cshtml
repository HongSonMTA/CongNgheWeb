@using QuanLyBanSach_Web.Models.Data;
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/LayOut/NguoiDungLayOut.cshtml";
}

<h2>GioHang</h2>
<h2>Giỏ hàng của bạn</h2>
<table id="divGioHang">
    <tr>
        <td>Mã sách</td>

        <td>Tên sách</td>

        <td>Ảnh bìa</td>

        <td>Đơn giá</td>


        <td>Số lượng</td>

        <td>Thành tiền</td>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.iMaSach</td>

            <td>@item.sTenSach</td>

            <td>
                <div id="HinhAnh"><a href="@Url.Action("ChiTietSach", "Sach", new { @MaSach = item.iMaSach})">
                        <img src="@Url.Content("~/AnhBia/"+item.sAnhBia)" />
                </a>
                </div>
            </td>

            <td>
                @String.Format("{0:0,0}", item.dDonGia) VNĐ
            </td>

            <td>@item.iSoLuong</td>

            <td>@String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>

        </tr>

    }

    <tr>
        <td colspan="6" style="text-align:right;color:blue">
            @Html.ActionLink("Chỉnh sửa giỏ hàng", "SuaGioHang")
        </td>

    </tr>
    <tr>
        <td colspan="6" style="text-align:right;color:blue">
            @using (Html.BeginForm("DatHang", "GioHang"))
            {
                <input type="submit" value="Đặt hàng" />
            }
        </td>
    </tr>

</table>
@*Css giỏ hàng*@
<style>
    #home{
        display:none;
    }
    #divGioHang {
        border: 1px solid #EEEEEE;
        margin-left: 10%;
    }

        #divGioHang td {
            padding: 10px;
            border: 1px solid #EEEEEE;
        }
       #HinhAnh{
           width: 50px;
           height:100px;
       }
</style>

