@using PagedList.Mvc
@using PagedList

@model PagedList<QuanLyBanSach_Web.Models.Data.DonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/LayOut/AdminLayOut.cshtml";
}
@using (Html.BeginForm("TimKiem", "QuanLyDonHang", FormMethod.Post))
{
    <input class="form-control form-control-lg" name="txtgiatri" type="text" placeholder="Nhập Từ Khóa Cần Tìm...">
}
<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaDH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DaThanhToan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TinhTrangDH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NgayDat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NgayGiao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().KhachHang.TenKH)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaDH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DaThanhToan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TinhTrangDH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayDat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayGiao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
        </td>
        <td>
            @Html.ActionLink("Xử Lý", "ChinhSua", new { @MaDonHang = item.MaDH }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Chi tiết", "Index", "ChiTietDonHang", new { @MaDonHang = item.MaDH }, new { @class = "btn btn-success" })
            @Html.ActionLink("Xóa", "Xoa", new { @MaDonHang = item.MaDH }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
