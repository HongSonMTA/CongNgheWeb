@using PagedList.Mvc
@using PagedList

@model PagedList<QuanLyBanSach_Web.Models.Data.TacGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/LayOut/AdminLayOut.cshtml";
}

@using (Html.BeginForm("TimKiem", "QuanLyTacGia", FormMethod.Post))
{
    <input class="form-control form-control-lg" name="txtgiatri" type="text" placeholder="Nhập Từ Khóa Cần Tìm...">
}
<br />
<br />
<p>
    @Html.ActionLink("Thêm Mới Tác Giả", "ThemMoiTacGia", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaTG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenTG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TieuSu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SDT)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaTG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TieuSu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.ActionLink("Chỉnh Sửa", "ChinhSua", new { @MaTG = item.MaTG }, new { @class = "btn btn-info" })
                @Html.ActionLink("Hiển Thị", "HienThi", new { @MaTG = item.MaTG }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Xóa", "Xoa", new { @MaTG = item.MaTG }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
